extends layout
block content
    h1= title
    p Welcome to #{title}

    form(method="post",action="/register")
        .col-md-6
            .form-group
                h4 Name
                input(type='text' name='name')#name.form-control
            .form-group
                h4 Category
                div
                div.radio
                    label
                        input(type="radio" name="hospital" value="hospital")#Hospital
                        | Hospital
                div.radio
                    label
                        input(type="radio" name="hospital" value="doctor")#Doctor
                        | Doctor
        .col-md-6
                .form-group
                    h4 Email
                    input(type="email").form-control#email
                .form-group
                    h4 Phone Number
                    input(type="text").form-control#PhoneNumber

        .col-md-12
        .col-md-6
            .form-group
                h4 Location
                input(type='text' name='location')#location.form-control

        .col-md-6
            .form-group
                .form-group
                    h4 Address Line 1
                    input(type='text' name='addressLine1')#addressLine1.form-control
                .form-group
                    h4 Address Line 2
                    input(type='text' name='addressLine2')#addressLine2.form-control
                .form-group
                    h4 City/District
                    input(type='text' name='city')#city.form-control
                .form-group
                    h4 State
                    input(type='text' name='state')#state.form-control
                .form-group
                    h4 Postal Code
                    input(type='number' name='postalCode')#postalCode.form-control
                button(type='button' data-loading-text='Resolving...')#resolveButton.btn.btn-default Resolve
        .col-md-12
        .col-md-6
            .form-group
                h4 Specialization
                input(list="specialization" name="specialization").form-control
                datalist#specialization
                    option Dermatology
                    option Pediatrics
                    option Neurology
                    option Cardiovascular Disease
        .col-md-6
            .form-group
                button(type='submit').btn.btn-primary Submit
